<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/_4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/liner_layout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/indentation"
            android:orientation="vertical"
            android:padding="@dimen/indentation_4dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Darving award"
                android:textAllCaps="true"
                android:lines="1">

            </TextView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold"
                tools:text="@tools:sample/cities">

            </TextView>

            <TextView
                android:id="@+id/preview_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:layout_weight="1"
                tools:text="Tourist filmed sitting on 5m-long crocodilezd">

            </TextView>

            <TextView
                android:id="@+id/published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lines="1"

                tools:text="@tools:sample/date/ddmmyy"/>



        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_news_size"
            android:layout_height="@dimen/image_news_size"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            tools:src="@tools:sample/avatars"


            >

        </ImageView>

    </LinearLayout>






</androidx.cardview.widget.CardView>
