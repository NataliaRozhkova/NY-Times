<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/indentation_8dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_image_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="@dimen/indentation_8dp"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_size_24sp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="sdfsdfsdfsd"
        />


    <TextView
        android:id="@+id/published_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@tools:sample/date/ddmmyy"
        />

    <TextView
        android:id="@+id/full_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title_size"
        app:layout_constraintTop_toBottomOf="@id/published_date"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="dsfdsdfsd sdjf sdf jsd hfsd hdfg
         hdfkg shdg hsdgj hsdhg skjdgkj hsdg
        sdjg jhsdg sdgh skjdg hsf shdfjhsdf sdjf
        hsdh fhsdjhfshdjfkhskjdhfsdfkjhsjdk"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>